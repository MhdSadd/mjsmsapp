%>

<!-- [ Main Content ] start -->
<section class="pcoded-main-container">
	<div class="pcoded-content">
		<!-- [ breadcrumb ] start -->
		<div class="page-header">
			<div class="page-block">
				<div class="row align-items-center">
					<div class="col-md-12">
						<div class="page-header-title">
							<h5 class="m-b-10">Message Center</h5>
						</div>
						<ul class="breadcrumb">
							<li class="breadcrumb-item">
								<a href="/admin"><i class="feather icon-home"></i></a>
							</li>
							<li class="breadcrumb-item">
								<a href="#!">Message Center</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<!-- [ breadcrumb ] end -->
		<!-- [ Main Content ] start -->
		<div class="row">
			<!-- [ form-element ] start -->
			<div class="col-sm-12">
				<div class="card">
					<script>
						// Example starter JavaScript for disabling form submissions if there are invalid fields
						(function () {
							"use strict";
							window.addEventListener(
								"load",
								function () {
									// Fetch all the forms we want to apply custom Bootstrap validation styles to
									var forms =
										document.getElementsByClassName("needs-validation");
									// Loop over them and prevent submission
									var validation = Array.prototype.filter.call(
										forms,
										function (form) {
											form.addEventListener(
												"submit",
												function (event) {
													if (form.checkValidity() === false) {
														event.preventDefault();
														event.stopPropagation();
													}
													form.classList.add("was-validated");
												},
												false
											);
										}
									);
								},
								false
							);
						})();
					</script>
					<div class="card-body">
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-8">
								<form
									action="/admin/message"
									method="POST"
									class="was-validated"
								>
									<div class="form-group">
										<label>Message Subject</label>
										<input
											type="text"
											class="form-control"
											placeholder="Enter Message Subject"
											name="subject"
										/>
									</div>
									<div class="form-group">
										<label for="exampleFormControlSelect1">Course</label>
										<select
											class="form-control custom-select"
											id="exampleFormControlSelect1"
											required
											name="course"
										>
											<option value="">Select Course To Send Reminder</option>
											<option value="CSC101">CSC101</option>
											<option value="CSC102">CSC102</option>
											<option value="CSC127">CSC127</option>
											<option value="CSC103">CSC103</option>
											<option value="CSC105">CSC105</option>
										</select>
										<div class="invalid-feedback">
											A course code must be provided
										</div>
									</div>
                  <div class="form-group">
										<label for="exampleFormControlSelect1">Level</label>
										<select
											class="form-control custom-select"
											id="exampleFormControlSelect1"
											required
											name="level"
										>
											<option value="">Select level To Send Reminder</option>
											<option value="100">100</option>
											<option value="200">200</option>
											<option value="300">300</option>
											<option value="400">400</option>
										</select>
										<div class="invalid-feedback">
											A level must be provided
										</div>
									</div>
									<div class="form-group">
										<label for="exampleFormControlTextarea1">Message</label>
										<textarea
											class="form-control"
											id="exampleFormControlTextarea1"
											rows="6"
											required
											name="message_body"
										></textarea>
										<div class="invalid-feedback">
											A message body must be provided
										</div>
									</div>
									<button class="btn btn-primary px-5" type="submit">
										Send Message
									</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- [ form-element ] end -->
		</div>
		<!-- [ Main Content ] end -->
	</div>
</section>

